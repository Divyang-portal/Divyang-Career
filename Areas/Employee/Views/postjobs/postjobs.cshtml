                        <div class="button-warpper">
                            <a href="javascript:;" class="civi-button button-outline">
                                Cancel
                            </a>
                            <a href="javascript:;" class="civi-button button-outline">
                                Save as draft
                            </a>
                            <button type="submit" class="btn-submit-company civi-button" name="submit_company">
                                <span>Post Job</span>
                            </button>
                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Basic info</h2>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="login-form">
                                    <h4>Job title <span>*</span></h4>
                                    <input type="text" placeholder="Name">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Jobs Categories <span>*</span></h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">Blood Disorder</option>
                                        <option value="2" data-select2-id="2">Haemophilia</option>
                                        <option value="3" data-select2-id="3">Sickle Cell Disease</option>
                                        <option value="4" data-select2-id="4">Thalassemia</option>
                                        <option value="5" data-select2-id="5">Chronic Neurological</option>
                                        <option value="6" data-select2-id="6">Multiple Sclerosis</option>
                                        <option value="7" data-select2-id="7">Parkinson’s Disease</option>
                                        <option value="8" data-select2-id="8">Intellectual Disability</option>
                                        <option value="9" data-select2-id="9">Autism Spectrum Disorder</option>
                                        <option value="10" data-select2-id="10">Specific Learning Disabilities</option>
                                        <option value="11" data-select2-id="11">Mental Illness</option>
                                        <option value="12" data-select2-id="12">Multiple Disabilities</option>
                                        <option value="13" data-select2-id="13">Physical Disability</option>
                                        <option value="14" data-select2-id="14">Hearing Impairment</option>
                                        <option value="15" data-select2-id="15">Locomotor Disability</option>
                                        <option value="16" data-select2-id="16">Speech and Language Disability</option>
                                        <option value="17" data-select2-id="17">Visual Impairment</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Job type <span>*</span></h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">Select an option</option>
                                        <option value="18" data-select2-id="18">Government</option>
                                        <option value="19" data-select2-id="19">NGOt</option>
                                        <option value="20" data-select2-id="20">Private</option>

