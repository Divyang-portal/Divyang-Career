                                        <option value="38" data-level="1" data-select2-id="38">Degree</option>
                                        <option value="39" data-level="1" data-select2-id="39">Diploma</option>
                                        <option value="40" data-level="1" data-select2-id="40">Doctorate</option>
                                        <option value="41" data-level="1" data-select2-id="41">Graduate</option>
                                        <option value="42" data-level="1" data-select2-id="42">Master</option>
                                        <option value="43" data-level="1" data-select2-id="43">Post Graduate</option>
                                        <option value="44" data-level="1" data-select2-id="44">Under graduate</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Gender</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">Select an option</option>
                                        <option value="45" data-select2-id="45">Female</option>
                                        <option value="46" data-select2-id="46">Male</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Salary</h2>

                        <div class="row">

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Show pay by</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">Range</option>
                                        <option value="47" data-select2-id="47">Starting amount</option>
                                        <option value="48" data-select2-id="48">Maximum amount</option>
                                        <option value="49" data-select2-id="49">Negotiable Price</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Range Currency</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">(₹) - INR</option>
                                        <option value="50" data-select2-id="50">(₹) - INR</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Minimum</h4>
                                    <input type="number" placeholder="">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Maximum</h4>
                                    <input type="number" placeholder="">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Rate</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">None</option>
                                        <option value="51" data-select2-id="51">Per Hour</option>
                                        <option value="52" data-select2-id="52">Per Day</option>
                                        <option value="53" data-select2-id="53">Per Week</option>
                                        <option value="54" data-select2-id="54">Per Month</option>
                                        <option value="55" data-select2-id="55">Per Year</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Job apply type</h2>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Select type</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="56" data-select2-id="56">By email</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="login-form">
                                    <h4>Job apply email</h4>
                                    <input type="email" placeholder="Enter email">
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Company</h2>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Select company</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">None</option>
                                        <option value="56" data-select2-id="56">Com_1234</option>
                                    </select>

                                    <p class="Create-new-company-btn"><a href="@Url.Action("addnewcompany", "Companies", new { area = "Employee" })" target="_blank">Create new company</a></p>

                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Location</h2>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="login-form">
                                    <h4>Location</h4>
                                    <select name="" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option value="" data-select2-id="1">None</option>
                                        <option value="57" data-select2-id="57">Agartala</option>
                                        <option value="58" data-select2-id="58">Agra</option>
                                        <option value="59" data-select2-id="59">Ahmedabad</option>
                                        <option value="60" data-select2-id="60">All India</option>
                                        <option value="61" data-select2-id="61">Bangalore</option>
                                        <option value="62" data-select2-id="62">Batala</option>
                                        <option value="63" data-select2-id="63">Bengaluru</option>
                                        <option value="64" data-select2-id="64">Chennai</option>
                                        <option value="65" data-select2-id="65">Delhi</option>
                                        <option value="66" data-select2-id="66">Gurugram</option>
                                        <option value="67" data-select2-id="67">Guwahati</option>
                                        <option value="68" data-select2-id="68">Haryana</option>
                                        <option value="69" data-select2-id="69">Itanagar</option>
                                        <option value="70" data-select2-id="70">Jaipur</option>
                                        <option value="71" data-select2-id="71">Kerala</option>
                                        <option value="72" data-select2-id="72">Kolkata</option>
                                        <option value="73" data-select2-id="73">Lucknow</option>
                                        <option value="74" data-select2-id="74">Mathura</option>
                                        <option value="75" data-select2-id="75">Mumbai</option>
                                        <option value="76" data-select2-id="76">Navi Mumbai</option>
                                        <option value="77" data-select2-id="77">New Delhi</option>
                                        <option value="78" data-select2-id="78">Noida</option>
                                        <option value="79" data-select2-id="79">Patna</option>
                                        <option value="80" data-select2-id="80">Pratapgarh</option>
                                        <option value="81" data-select2-id="81">Visakhapatnam</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="block-from">
                        <div class="col-md-12">
                            <div class="login-form">
                                <h4>Cover image</h4>

                                <div class="uploadimgs">
                                    <input type="file" name="images[]" id="images2" multiple class="form-control" required>
                                    <div class="uploadimg">
                                        <div class="uploadimg-middle">
                                            <i class="fa fa-arrow-up" aria-hidden="true"></i>
                                            <p>Click here <span>or drop files to upload</span></p>
                                        </div>
                                    </div>
                                    <div class="form-group uploadimg">
                                        <div id="image_preview2" style="width:100%;">

                                        </div>
                                    </div>
                                </div>

                                <div class="field-note">The cover image size should be max 1920 x 200px</div>

                            </div>
                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Gallery</h2>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="login-form">
                                    <h4>Image</h4>

                                    <div class="uploadimgs">
                                        <input type="file" name="images[]" id="images3" multiple class="form-control" required>
                                        <div class="uploadimg">
                                            <div class="uploadimg-middle">
                                                <i class="fa fa-arrow-up" aria-hidden="true"></i>
                                                <p>Upload</p>
                                            </div>
                                        </div>
                                        <div class="form-group uploadimg">
                                            <div id="image_preview3" style="width:100%;">

                                            </div>
                                        </div>
                                    </div>

                                    <div class="field-note">Maximum file size: 800kb.</div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="block-from">
                        <h2>Video</h2>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="login-form">
                                    <h4>Introduction video Url</h4>
                                    <input type="email" placeholder="Enter url video">
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

                <div class="col-md-4">
                    <div class="spacing">
                        <p class="detailsright-heading">About this job</p>
                        <div class="about-jobs-dashboard">
