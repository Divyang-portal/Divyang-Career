                        <div class="block-from">
                            <h2>Cover image</h2>

                            <div class="row">
                                <div class="col-md-3 uploadimgs">
                                    @Html.TextBoxFor(U => U.CoverImagePath, new { type = "file", @class = "form-control", id = "images2", accept = "image/png, image/jpeg" })
