                        </div>
                        <div class="block-from">
                            <h2>Gallery</h2>

                            <div class="row">
                                <div class="col-md-3 uploadimgs">
                                    @Html.TextBoxFor(U => U.GalleryImagePath, new { type = "file", @class = "form-control", id = "images3", accept = "image/png, image/jpeg" })
